<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_item_backend"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/todo_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView Title"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/lightBlack"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/todo_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView Time"
        android:textColor="@color/lightGray"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/todo_list_title"
        app:layout_constraintLeft_toLeftOf="@+id/todo_list_title" />
</android.support.constraint.ConstraintLayout>